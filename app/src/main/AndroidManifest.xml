<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.test.topapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:name=".framework.TopAppApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TopApp"
        android:usesCleartextTraffic="true">
        <activity android:name=".presentation.main.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".presentation.user.login.LoginActivity"
            android:noHistory="true" />
        <activity
            android:name=".presentation.user.register.RegisterActivity"
            android:noHistory="true" />
        <activity
            android:name=".presentation.user.admin.UserAdminActivity"
            android:noHistory="true" />
        <activity
            android:name=".presentation.user.owner.UserOwnerActivity"
            android:noHistory="true" />
        <activity
            android:name=".presentation.user.regular.UserRegularActivity"
            android:noHistory="true" />
        <activity
            android:name=".presentation.restaurant.manage.RestaurantManageActivity"
            android:noHistory="true" />
        <activity
            android:name=".presentation.restaurant.page.RestaurantPageActivity"
            android:noHistory="true" />
        <activity
            android:name=".presentation.review.response.ReviewResponseActivity"
            android:noHistory="true" />
        <activity
            android:name=".presentation.review.manage.ReviewManageActivity"
            android:noHistory="true" />
    </application>

</manifest>